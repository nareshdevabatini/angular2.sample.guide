
{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../Scripts/",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules/@types/",
      "../node_modules/"
    ],
    "types": [
      "node",
      "core-js"
    ]
  },
  
  "exclude": [
    "node_modules/*",
     "**/*.spec.ts"
  ]
}
